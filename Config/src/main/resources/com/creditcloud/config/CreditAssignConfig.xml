<?xml version="1.0"?>
<CreditAssignConfig>
    <enablePartlyAssign>true</enablePartlyAssign>
    <enableReassign>true</enableReassign>
    <enableReassignWithOneMonthLimit>true</enableReassignWithOneMonthLimit> <!--承接的债权如果是二次转让, 是否持有一个月（含）才可以转让-->
    
    <lessThreeMonthAssignServiceFee> <!--投资成功后三个月以内（含）-->
        <type>FLOATING</type>
        <fixed>0.00</fixed>
        <rate>0.7</rate>
        <period>SINGLE</period>
        <scope>ASSIGNAMOUNT</scope>
    </lessThreeMonthAssignServiceFee>
    
    <moreThreeLessTwelveMonthAssignServiceFee> <!--投资成功后三个月以后十二个月以内（含）-->
        <type>FLOATING</type>
        <fixed>0.00</fixed>
        <rate>0.5</rate>
        <period>SINGLE</period>
        <scope>ASSIGNAMOUNT</scope>
    </moreThreeLessTwelveMonthAssignServiceFee>
    
    <moreTwelveMonthAssignServiceFee> <!--投资成功后十二个月以后-->
        <type>FLOATING</type>
        <fixed>0.00</fixed>
        <rate>0.3</rate>
        <period>SINGLE</period>
        <scope>ASSIGNAMOUNT</scope>
    </moreTwelveMonthAssignServiceFee>
    
    <assignableMonthCarrayInterest>1</assignableMonthCarrayInterest> <!--起息后多长时间后可转让, 单位为月-->
    <nonassignableBeforeDue>15</nonassignableBeforeDue>  <!--距离到期前一定期限内不可以转让, 单位为天--> 
    
    <startAssignableTime>08:00</startAssignableTime>  <!-- 可转让日每天哪个时刻以后可以申请转让 -->
    <endAssignableTime>22:00</endAssignableTime>  <!-- 可转让日每天哪个时刻以后不可以再申请转让 -->
    <assignApplyExpireTime>23:00</assignApplyExpireTime>  <!-- 转让申请的失效时间 -->
    
    <minDiscountRate>0.0</minDiscountRate>  <!-- 最低折让率 -->
    <maxDiscountRate>0.10</maxDiscountRate>  <!-- 最高折让率 -->
    
</CreditAssignConfig>
